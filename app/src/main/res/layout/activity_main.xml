<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D3D3D3"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/spider2"
        android:padding="75dp"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap the incoming spiders and protect the fly"
        android:gravity="center"
        android:id="@+id/Tap"
        android:layout_below="@+id/Start"
        android:textColor="#808080"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Help"
        android:id="@+id/Help"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/soundbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/soundtabsmall" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Start"
        android:layout_alignEnd="@+id/Start"
        android:src="@drawable/musictabsmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Highscore: "
        android:id="@+id/highscore"
        android:textSize="45dp"
        android:layout_above="@+id/tooltip"
        android:layout_toLeftOf="@+id/musicbutton"
        android:layout_toStartOf="@+id/musicbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap on the spider to Start!"
        android:id="@+id/tooltip"
        android:layout_above="@+id/Help"
        android:textColor="#990000"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
